{
    "version": "2.0.0",
    "presentation" : { "reveal": "always" },
    "tasks": [
        {
            "label": "Configure",
            "type": "shell",
            "command": "./configure --enable-depend --enable-cassert --enable-debug",
            "problemMatcher": [
                "$eslint-compact"
            ]
        },
        {
            "label": "Make All",
            "type": "shell",
            "command": "make -j4 all",
            "problemMatcher": [
                "$eslint-compact"
            ]
        },
        {
            "label": "Make Clean All",
            "type": "shell",
            "command": "make clean",
            "problemMatcher": [
                "$eslint-compact"
            ]
        },
        {
            "label": "Make Install",
            "type": "shell",
            "command": "make install"
        }
    ]
}